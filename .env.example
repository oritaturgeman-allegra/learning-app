# Ariel Learning App - Environment Configuration
# Copy this file to .env and fill in the required values

# ==============================================================================
# DATABASE (Optional — defaults to local SQLite)
# ==============================================================================

# Database connection URL
# SQLite (default, local development):
#   LEARNING_DATABASE_URL=sqlite:///data/learning.db
#
# PostgreSQL (production):
#   LEARNING_DATABASE_URL=postgresql://user:pass@host:5432/dbname
LEARNING_DATABASE_URL=sqlite:///data/learning.db

# Enable SQL query logging for debugging (default: false)
SQL_ECHO=false

# ==============================================================================
# SERVER SETTINGS
# ==============================================================================

# Server host binding (default: 0.0.0.0)
FLASK_HOST=0.0.0.0

# Server port (default: 8000)
FLASK_PORT=8000

# Enable debug mode — NEVER enable in production (default: false)
FLASK_DEBUG=false

# ==============================================================================
# SENTRY ERROR MONITORING (Optional)
# ==============================================================================

# Sentry DSN for error monitoring (empty = disabled)
SENTRY_DSN=

# Environment name: development | staging | production
SENTRY_ENVIRONMENT=development

# Fraction of transactions to trace (0.0-1.0, default: 0.1)
SENTRY_TRACES_SAMPLE_RATE=0.1

# ==============================================================================
# LOGGING
# ==============================================================================

# Log format: "text" for development, "json" for production (default: text)
LOG_FORMAT=text

# Log level: DEBUG | INFO | WARNING | ERROR (default: INFO)
LOG_LEVEL=INFO
